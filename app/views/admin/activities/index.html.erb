<div class="pull-right">
  <%= link_to("创建新活动", new_admin_activity_path, :class => "btn btn-success" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <% @activities.each do |activity| %>
  <tr>
    <td>
      <%= render_activity_status(activity) %>

      <%= link_to(activity.subject, admin_activity_path(activity)) %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_activity_path(activity)) %> |
      <%= link_to("Destroy", admin_activity_path(activity), :method => :delete, :data => { :confirm => "Are you sure? " }) %>
    </td>
    <td>
      <%= activity.created_at %>
    </td>
  </tr>
  <% end %>
</table>
