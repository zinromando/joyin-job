<div class="pull-right">
    <%= link_to("创建新活动", new_admin_activity_path, :class => "btn btn-success" ) %>
</div>

<br><br>

<table class="table table-boldered">
   <thead>
      <tr>
          <td>活动</td>
          <td>收到自荐信数量</td>
          <td>活动时间</td>
          <td>管理选项</td>
          <td>刊登时间</td>
      </tr>
   </thead>

    <% @activities.each do |activity| %>
    <tr>
        <td>
            <%= render_activity_status(activity) %>

            <%= link_to(activity.subject, admin_activity_path(activity)) %>
        </td>
        <td> <%= link_to(activity.IntroLetters.count, admin_activity_intro_letters_path(activity)) %> </td>
        <td> <%= activity.field %> </td>
        <td>
            <%= link_to edit_admin_activity_path(activity), class: "btn btn-xs btn-info" do %><i class="fa fa-pencil"></i><% end %>
            <%= link_to admin_activity_path(activity), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure? " } do %><i class="fa fa-trash-o"></i><% end %>

            <% if activity.is_hidden %>

            <%= link_to publish_admin_activity_path(activity) , :method => :post, :class => "btn btn-xs btn-success" do %><i class="fa fa-eye"></i><% end %>

            <% else %>
            <%= link_to hide_admin_activity_path(activity), :method => :post,  :class => "btn btn-xs btn-warning" do %><i class="fa fa-eye-slash"></i><% end %>
            <% end %>
        </td>
        <td>
            <%= activity.created_at %>
        </td>
    </tr>
    <% end %>
</table>
