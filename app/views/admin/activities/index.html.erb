<div class="pull-right">
    <%= link_to("创建新活动", new_admin_activity_path, :class => "btn btn-success" ) %>
</div>

<br><br>

<table class="table table-boldered">
   <thead>
      <tr>
          <td>活动</td>
          <td>收到自荐信数量</td>
          <td>活动时间</td>
          <td>管理选项</td>
          <td>刊登时间</td>
      </tr>
   </thead>

    <% @activities.each do |activity| %>
    <tr>
        <td>
            <%= render_activity_status(activity) %>

            <%= link_to(activity.subject, admin_activity_path(activity)) %>
        </td>
        <td> <%= link_to(activity.IntroLetters.count, admin_activity_intro_letters_path(activity)) %> </td>
        <td> <%= activity.field %> </td>
        <td>
            <%= link_to("修改", edit_admin_activity_path(activity)) %>
            |
            <%= link_to("删除", admin_activity_path(activity), :method => :delete, :data => { :confirm => "Are you sure? " }) %>
            |
            <% if activity.is_hidden %>

            <%= link_to("首页显示", publish_admin_activity_path(activity) , :method => :post, :class => "btn btn-xs btn-default") %>
        <% else %>
            <%= link_to("首页隐藏", hide_admin_activity_path(activity), :method => :post,  :class => "btn btn-xs btn-default") %>
            <% end %>

        </td>
        <td>
            <%= activity.created_at %>
        </td>
    </tr>
    <% end %>
</table>
